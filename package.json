{
  "name": "IdeaVault",
  "version": "1.0.0",
  "productName": "IdeaVault",
  "description": "A desktop note and idea management app built with Electron.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-packager . IdeaVault --platform=darwin --arch=x64 --icon=/Users/erkhembilegariunbold/Desktop/IdeaVault/assets/icon.icns --overwrite",
    "build:win": "electron-packager . IdeaVault --platform=win32 --arch=x64 --icon=assets/icon.ico --overwrite",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^39.2.0",
    "electron-packager": "^17.1.2",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "pg": "^8.16.3"
  },
  "build": {
    "appId": "com.erik.ideavault",
    "productName": "IdeaVault",
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "/Users/erkhembilegariunbold/Desktop/IdeaVault/assets/icon.icns"
    },
    "win": {
      "target": ["nsis", "zip"],
      "icon": "assets/icon.ico"
    }
  }
}
